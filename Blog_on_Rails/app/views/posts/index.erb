<div class='container'>
<div class = 'row mt-3'>
    <% @posts.each do |post| %>
        <div class = "col-md-6 mb-2 col-sm-12 d-flex justify-content-center col-lg-4">
            <div class = 'card m-2 w-100' style = ' height: 7rem ;overflow: hidden ;text-overflow: ellipsis'> 
                <div class = "card-body">
                    <h3 class = "card-title">
                        <%= link_to post_path(post) do %>
                            <%= post.title.truncate(20) %>
                        <% end %>
                    </h3>
                    <div class = 'overflow-hidden' style = 'height:5rem'>
                    <p><%= post.body.truncate(45) %></p>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    </div>
</div>  