<div class='container justify-content-center d-flex mt-4'>
    <%= form_for @post , url: post_path(@post), method: :patch do |f| %>
    <h2 class='text-primary'>Edit Post:</h2>
        <div class='mt-3' style='width:30rem'>
            <%= f.label :title, "Title", class: 'form-label' %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class='mt-3'>
            <%= f.label :body, "Body", class: 'form-label' %>
            <%= f.text_area :body, class: 'form-control' %>
        </div>
        <%= f.submit "Update Post" , class: 'btn btn-outline-primary mt-4'%>
    <% end %>
</div>